<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Newsletter" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/teal_900</item>
        <item name="colorPrimaryContainer">@color/purple_100</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/blue</item>

        <!-- Cores de status e navegação -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Personalizações adicionais -->
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>